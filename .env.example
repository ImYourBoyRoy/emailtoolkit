# ============================
# emailtoolkit .env.example
# Copy to `.env` and adjust.
# Booleans: true/false, yes/no, on/off, 1/0
# ============================

# Logging
EMAILTK_LOG_LEVEL=INFO                 # DEBUG, INFO, WARNING, ERROR

# Validation and deliverability policy
EMAILTK_REQUIRE_MX=true                # If true, deliverability requires MX only
EMAILTK_REQUIRE_DELIVERABILITY=false   # If true, parse() raises on non-deliverable
EMAILTK_ALLOW_SMTPUTF8=true            # Allow RFC 6531 UTF-8 local parts

# DNS behavior
EMAILTK_USE_DNSPYTHON=true
EMAILTK_DNS_TIMEOUT_SECONDS=2.0
EMAILTK_DNS_TTL_SECONDS=900

# Extraction
EMAILTK_EXTRACT_UNIQUE=true            # Deduplicate by canonical form
EMAILTK_EXTRACT_MAX_RESULTS=0          # 0 or empty means no cap

# Normalization and provider rules
EMAILTK_NORMALIZE_CASE=true
EMAILTK_GMAIL_CANON=true               # Gmail dot/plus rules and googlemail aliasing

# Disposable domains
EMAILTK_TREAT_DISPOSABLE_AS_INVALID=false
# Source for disposable domains (choose one)
#EMAILTK_DISPOSABLE_SOURCE=none
#EMAILTK_DISPOSABLE_SOURCE=file://./disposable.txt
#EMAILTK_DISPOSABLE_SOURCE=url://https://example.com/disposable.txt

# Public suffix enforcement (optional)
EMAILTK_BLOCK_PRIVATE_TLDS=false
# Provide a local public suffix list file to enforce known TLDs (one suffix per line)
#EMAILTK_PUBLIC_SUFFIX_FILE=./public_suffixes.txt

# PII redaction in logs
EMAILTK_PII_REDACT_LOGS=true
EMAILTK_PII_REDACT_STYLE=mask          # mask or none

# Optional SMTP probe (advanced, off by default)
EMAILTK_ENABLE_SMTP_PROBE=false
EMAILTK_SMTP_PROBE_TIMEOUT=3.0
EMAILTK_SMTP_PROBE_CONCURRENCY=5
EMAILTK_SMTP_PROBE_HELO=example.com

# ============================
# Suggested profiles
# ============================
# Development (safe):
# EMAILTK_REQUIRE_MX=true
# EMAILTK_REQUIRE_DELIVERABILITY=false
# EMAILTK_PII_REDACT_LOGS=true
# EMAILTK_DNS_TIMEOUT_SECONDS=1.5

# Production (stricter, tune to your risk tolerance):
# EMAILTK_REQUIRE_MX=true
# EMAILTK_REQUIRE_DELIVERABILITY=true
# EMAILTK_PII_REDACT_LOGS=true
# EMAILTK_EXTRACT_MAX_RESULTS=0
# EMAILTK_DISPOSABLE_SOURCE=url://https://your-source/disposable.txt
# EMAILTK_DNS_TIMEOUT_SECONDS=2.0
